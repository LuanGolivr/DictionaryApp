<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LanguageDict.Views.SeeMore"
             Title="More Details"
             BackgroundColor="#272727">
    <ScrollView>
        <Grid ColumnDefinitions="*,*" Padding="10">
            <VerticalStackLayout Grid.Column="0">
                <Label Text="Word: " FontSize="Title" />
                <Label Text="{Binding Word}" Padding="10" FontSize="15"/>

                <Label Text="Translation: " FontSize="Title" />
                <Label Text="{Binding Translation}" Padding="10" FontSize="15"/>

                <Label Text="Meanings: " FontSize="Title" />
                <Label Text="{Binding Meanings}" Padding="10" FontSize="15"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1">
                <Label Text="Synonimus: " FontSize="Title" />
                <Label Text="{Binding Synonimus}" Padding="10" FontSize="15"/>

                <Label Text="Antonymus: " FontSize="Title" />
                <Label Text="{Binding Antonyms}" Padding="10" FontSize="15"/>

                <Label Text="Examples: " FontSize="Title" />
                <Label Text="{Binding Examples}" Padding="10" FontSize="15"/>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>