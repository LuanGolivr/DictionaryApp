            HorizontalOptions="Center" />
            <Entry Placeholder="Insert a word" x:Name="gettingWord" />
            <Button Text="TestAPI" FontSize="20" Clicked="Button_Clicked"></Button>

            <Label Text="Word:" FontSize="Title" TextColor="White" Margin="20" />
            <Label Text="{Binding Word}" FontSize="13" TextColor="White" />

            <Label Text="Meanings:" FontSize="Title" TextColor="White" Margin="20"/>
