        -->
        <Grid ColumnDefinitions="*,*" Padding="10">

            <VerticalStackLayout Grid.Column="0">
                <Label Text="Word: " FontSize="Title"  TextColor="White"/>
                <Border BackgroundColor="#323232" Padding="0" StrokeShape="RoundRectangle 20" MinimumHeightRequest="200">
                    <Label Text="{Binding Word}" FontSize="Title"  TextColor="White" HorizontalOptions="Center" Padding="10"/>
                </Border>
                <Label Text="Meanings: " FontSize="Title" TextColor="White" />
                <Border BackgroundColor="#323232" Margin="10" Padding="10" StrokeShape="RoundRectangle 20" MinimumHeightRequest="600">
                    <Label Text="{Binding Meanings}" FontSize="Body"  TextColor="White" Padding="5"/>
                </Border>
                <Entry Placeholder="Insert a word" x:Name="gettingWord" HeightRequest="50" />
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1">
                <Label Text="Synonimus: " FontSize="Title"  TextColor="White"/>
                <Border BackgroundColor="#323232" Margin="10" Padding="10" StrokeShape="RoundRectangle 20" MinimumHeightRequest="450">
                    <Label Text="{Binding Synonimus}" FontSize="Body"  TextColor="White" Padding="5"/>
                </Border>

                <Label Text="Antonyms: " FontSize="Title"  TextColor="White"/>
                <Border BackgroundColor="#323232" Margin="10" Padding="10" StrokeShape="RoundRectangle 20" MinimumHeightRequest="450">
                    <Label Text="{Binding Antonyms}" FontSize="Body"  TextColor="White" Padding="5"/>
                </Border>
                <Button Text="TestAPI" FontSize="20" Clicked="Button_Clicked" HeightRequest="50"></Button>
            </VerticalStackLayout>

            
            
        </Grid>
        
        
        
    </ScrollView>
</ContentPage>