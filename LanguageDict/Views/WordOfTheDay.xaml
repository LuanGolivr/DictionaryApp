<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LanguageDict.Views.WordOfTheDay"
             Title="WordOfTheDay">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Placeholder="Insert a word" x:Name="gettingWord" />
        <Button Text="TestAPI" FontSize="20" Clicked="Button_Clicked"></Button>

        <Label Text="{Binding teste}" FontSize="20" TextColor="White" />
        <Label Text="{Binding word}" FontSize="20" TextColor="White" />
    </VerticalStackLayout>
</ContentPage>