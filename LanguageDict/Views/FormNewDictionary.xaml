<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LanguageDict.Views.FormNewDictionary"
             Title="Create a new Dictionary"
             BackgroundColor="#404040">

    <ScrollView>
        <VerticalStackLayout Margin="20" Padding="10">
            <Entry x:Name="TargetL" Placeholder="Insert here the language you're learning!!" PlaceholderColor="White"/>
            <Entry x:Name="NativeL" Placeholder="Insert here the language you're going to use as a suport !!" PlaceholderColor="White" />
            <Button Clicked="CreateNewDict" BackgroundColor="#08522D" Text="Create" CornerRadius="20" MaximumWidthRequest="500" TextColor="White" BorderColor="Black"></Button>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>